{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_PUBLIC_AZURE_CLIENT_ID",
    "NEXT_PUBLIC_AZURE_TENANT_ID",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_API_SCOPE"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "clean": {
      "cache": false
    }
  }
}
